{
	"name": "vscode-plugin",
	"displayName": "vscode-plugin",
	"description": "工作虚拟自习室",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:taskWebView",
		"onView:taskTimes"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "自习室配置",
				"properties": {
					"studyArea.typeOptions": {
						"type": "array",
						"default": [
							{
								"label": "娱乐",
								"value": "娱乐"
							},
							{
								"label": "学习",
								"value": "学习"
							}
						],
						"description": "输入自习室类型"
					}
				}
			}
		],
		"commands": [
			{
				"command": "studyArea.addType",
				"icon": "media/icon/add-task.svg",
				"title": "增加任务类型"
			},
			{
				"command": "studyArea.login",
				"icon": "media/icon/yuque.svg",
				"title": "登陆"
			},
			{
				"command": "studyArea.addDir",
				"icon": "media/icon/mulu.svg",
				"title": "添加目录"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "studyArea.login",
					"when": "view == taskWebView",
					"group": "navigation"
				},
				{
					"command": "studyArea.addType",
					"when": "view == taskWebView",
					"group": "navigation"
				},
				{
					"command": "studyArea.addDir",
					"when": "view == taskWebView",
					"group": "navigation"
				}
			]
		},
		"views": {
			"studyArea": [
				{
					"id": "taskWebView",
					"type": "webview",
					"name": "任务面板",
					"contextualTitle": "任务面板"
				},
				{
					"id": "taskTimes",
					"type": "webview",
					"name": "时长统计",
					"contextualTitle": "时长统计"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "studyArea",
					"title": "自习室",
					"icon": "media/xuexi.svg"
				}
			]
		},
		"viewsWelcome": []
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"dayjs": "^1.11.3"
	}
}